<%= form_with model: tienda do |form| %>
    <% tienda.errors.full_messages.each do |error| %>
        <div><%= error %></div>
    <% end %>
    <br>

    <div>
        <%= form.label :nombre %>
        <%= form.text_field :nombre %>
    </div>

    <div>
        <%= form.label :direccion %>
        <%= form.text_area :direccion %>
    </div>

   <div>
        <%= form.label :telefono %>
        <%= form.text_field :telefono %>
    </div>

    <div>
        <%= form.submit %>
    </div>
<% end %>
<hr>