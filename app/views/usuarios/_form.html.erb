<%= form_with model: usuario do |form| %>
  <% usuario.errors.full_messages.each do |error| %>
    <div><%= error %></div>
  <% end %>
  <br>
  <div>
    <%= form.label :nombre %>
    <%= form.text_field :nombre %>
  </div>

  <div>
    <%= form.label :correo %>
    <%= form.email_field :correo %>
  </div>

  <div>
    <%= form.label :contraseña %>
    <%= form.password_field :contraseña %>
  </div>

  <div>
    <%= form.label :roll %>
    <%= form.select :roll, options_for_select(["Administrador", "Trabajador", "Repartidor"]) %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
<hr>