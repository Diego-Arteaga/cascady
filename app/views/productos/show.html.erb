<body>
    <nav class="bg-white grid grid-cols-12 flex-row content-center min-[320px]:h-8 sm:h-10 md:h-12 2xl:h-[52px]">
        <div class="flex flex-row place-items-center space-x-2 col-span-5 min-[320px]:ml-2 sm:ml-3 md:ml-4 lg:ml-5 xl:ml-6 2xl:ml-7">
            <a href="<%=productos_path%>">
                <svg class="fill-[#6B6A6F] min-[320px]:w-[10px] min-[320px]:h-[10px] sm:w-4 sm:h-4 md:w-[18px] md:h-[18px] xl:w-5 xl:h-5 2xl:w-[22px] 2xl:h-[22px]" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path d="M9.4 233.4c-12.5 12.5-12.5 32.8 0 45.3l160 160c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L109.2 288 416 288c17.7 0 32-14.3 32-32s-14.3-32-32-32l-306.7 0L214.6 118.6c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0l-160 160z"/></svg>
            </a>
            <a href="<%=productos_path%>">
                <p class="font-ubuntu font-bold text-[#6B6A6F] min-[320px]:text-[10px] sm:text-[12px] md:text-[14px] xl:text-[16px] 2xl:text-[18px]">Volver</p>
            </a>
        </div>
    </nav>

    <div>
        <div class="flex place-content-center place-items-center min-[320px]:mt-6 min-[320px]:mb-4 sm:mt-9 sm:mb-6 md:mt-12 md:mb-8">
            <h1 class="font-ubuntu font-bold min-[320px]:text-[16px] sm:text-[20px] md:text-[22px] lg:text-[24px] 2xl:text-[28px]">Informacion de producto</h1>
        </div>
    </div>
    <div class="container mx-auto">
        <div class="max-w-md mx-auto bg-white shadow-lg rounded-lg overflow-hidden">
            <div class="px-4 py-2">
                <h2 class="text-lg font-semibold text-gray-800">Datos</h2>
                <p class="text-sm text-gray-600 mt-1">Aquí están los detalles del producto:</p>
            </div>
            <div class="px-4 py-2">
                <%= image_tag @producto.foto, class:" justify-center rounded h-full min-[320px]:w-[46px] sm:w-[62px] md:w-[86px] xl:w-[104px] 2xl:w-[132px]" if @producto.foto.attached?%>
                <p class="text-sm text-gray-600">Nombre: <%=@producto.nombre%></p>
                <p class="text-sm text-gray-600">Precio: <%=@producto.precio%></p>
                <p class="text-sm text-gray-600">Promoción: <%=@producto.promocion%></p>
                <p class="text-sm text-gray-600">Tipo: <%=@producto.tipo%></p>
                <p class="text-sm text-gray-600">Descripción: <%=@producto.descripcion%></p>
            </div>
            <hr>
            <div class="flex">
                <div class="flex-auto py-2 px-4">
                    <a href="<%=edit_producto_path(@producto)%>" class="inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded flex items-center justify-center">Editar</a>
                </div>
                <div class="flex-auto py-2 px-4">
                    <%= link_to "Eliminar", producto_path(@producto), class:"inline-block bg-[#FF1F1F] hover:bg-[#AB0000] text-white font-bold py-2 px-4 rounded flex items-center justify-center", data: {
                        turbo_method: :delete,
                        turbo_confirm: "Estas seguro de eliminar el cliente ?"
                    } %>
                </div>
            </div>
        </div> 
    </div>
</body>