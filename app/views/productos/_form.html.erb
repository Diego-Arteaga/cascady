<%= form_with model: producto do |form| %>
    <% producto.errors.full_messages.each do |error| %>
        <div><%= error %></div>
    <% end %>
    <br>

    <div>
        <%= form.label :nombre %>
        <%= form.text_field :nombre %>
    </div>

    <div>
        <%= form.label :precio %>
        <%= form.number_field :precio %>
    </div>

    <div>
        <%= form.label :descripcion %>
        <%= form.text_area :descripcion %>
    </div>

    <div>
        <%= form.label :promocion %>
        <%= form.number_field :promocion %>
    </div>
    <div>
        <%= form.label :tipo %>
        <%= form.select :tipo, options_for_select(["Hamburguesa", "Papas", "Alitas"]) %>
    </div>
    <div>
        <%= form.label :foto %>
        <%= form.file_field :foto%>
    </div>

    <div>
        <%= form.submit "Guardar"%>
    </div>
<% end %>
<hr>