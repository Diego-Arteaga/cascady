<div class="mx-auto max-w-screen-lg py-8">
    <h2 class="text-3xl font-bold text-center mb-6">Clientes</h2>
    <div class="flex justify-between items-center mb-6">
        <%= link_to "Regresar", admins_path, class: "text-blue-600 hover:text-blue-800" %>
        <%= link_to "Agregar cliente", new_cliente_path, class: "text-green-600 hover:text-green-800" %>
    </div>
    <div class="overflow-x-auto">
        <table class="table-auto w-full">
            <thead>
                <tr>
                    <th class="px-4 py-2">Nombre</th>
                    <th class="px-4 py-2">Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% @clientes.each do |cliente| %>
                    <tr class="border-b hover:bg-gray-100">
                        <td class="px-4 py-3"><%= cliente.nombre %></td>
                        <td class="px-4 py-3">
                            <%= link_to cliente_path(cliente.id), class: 'text-blue-600 hover:underline mr-2' do %>
                                Ver
                            <% end %>
                            <%= link_to edit_cliente_path(cliente.id), class: 'text-green-600 hover:underline' do %>
                                Editar
                            <% end %>
                        </td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>
